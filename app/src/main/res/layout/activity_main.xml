<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4D9FF"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/currencyButton"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:layout_marginStart="161dp"
        android:layout_marginLeft="161dp"
        android:layout_marginTop="141dp"
        android:layout_marginEnd="162dp"
        android:layout_marginRight="162dp"
        android:text="Kursy walut"
        android:textColor="#273469"
        android:textSize="18sp"
        app:backgroundTint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/bg_button"
       />


    <Button
        android:id="@+id/goldButton"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:layout_marginStart="161dp"
        android:layout_marginLeft="161dp"
        android:layout_marginTop="152dp"
        android:layout_marginEnd="162dp"
        android:layout_marginRight="162dp"
        android:layout_marginBottom="152dp"
        android:text="Kursy zÅ‚ota"
        android:textColor="#273469"
        android:textSize="18sp"
        app:backgroundTint="#FFFFFF"
        android:background="@drawable/bg_button"
        app:layout_constraintBottom_toTopOf="@+id/converterButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currencyButton" />

    <Button
        android:id="@+id/converterButton"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:layout_marginStart="161dp"
        android:layout_marginLeft="161dp"
        android:layout_marginEnd="162dp"
        android:layout_marginRight="162dp"
        android:layout_marginBottom="141dp"
        android:background="@drawable/bg_button"
        android:text="Przelicznik"
        android:textColor="#273469"
        android:textSize="18sp"
        app:backgroundTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pngix_com_stacks_of_money_png_8020" />

</androidx.constraintlayout.widget.ConstraintLayout>